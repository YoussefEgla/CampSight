<div class="container my-5" style="max-width: 650px;">
    <h1 class="text-center">Edit Campsight</h1>
    <form action="/camps/<%= camp._id %>?_method=PUT" method="POST">
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="camp[title]" value="<%= camp.title %>"
                    required>
            </div>
            <div class="form-group col-md-12">
                <label for="location">How can we get there?</label>
                <input type="text" class="form-control" id="location" value="<%= camp.location %>" name="camp[location]"
                    required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="description">Tell us about your experience</label>
                <textarea class="form-control" id="description" name="camp[description]" rows="5"
                    required><%= camp.description %></textarea>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="image">Image Url</label>
                <input type="text" class="form-control" name="camp[image]" id="image" value="<%= camp.image %>"
                    required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="city">City</label>
                <input type="text" class="form-control" id="city" name="camp[city]" value="<%= camp.city %>" required>
            </div>
            <div class="form-group col-md-4">
                <label for="state">State</label>
                <select id="state" class="form-control" name="camp[state]">
                    <option selected>Choose...</option>
                    <option>...</option>
                </select>
            </div>
            <div class="form-group col-md-2">
                <label for="zip">Zip</label>
                <input type="text" class="form-control" id="zip" name="camp[zip]" value="<%= camp.zip %>">
            </div>
        </div>
        <div class="form-group">
        </div>
        <button type="submit" class="btn btn-primary">Publish Edits</button>
    </form>
</div>
<!-- Footer & Scripts-->
<%# Footer %>
<%- include("./partials/footer.ejs") %>